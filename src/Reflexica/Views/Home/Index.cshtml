@using System.Web.Mvc.Html
@using Reflexica.Models

@{
  ViewBag.Title = "Reflexica UI";
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
  #dropZone {
    background: gray;
    border: black dashed 3px;
    width: 200px;
    padding: 50px;
    text-align: center;
    color: white;
  }
</style>

<script type="text/javascript">
  $(function() {
    $('#dropZone').filedrop({
      url: '@Url.Action("UploadFiles")',
      paramname: 'files',
      maxFiles: 5,
      dragOver: function() {
        $('#dropZone').css('background', 'blue');
      },
      dragLeave: function() {
        $('#dropZone').css('background', 'gray');
      },
      drop: function() {
        $('#dropZone').css('background', 'gray');
      },
      afterAll: function() {
        $('#dropZone').html('The file(s) have been uploaded successfully!');
      },
      uploadFinished: function(i, file, response, time) {
        $('#uploadResult').append('<li>' + file.name + '</li>');
      }
    });
  });

  $(':radio[name=Text]').select(function () {
    var value = $(this).filter(':checked').value();
    if (value == '1') {
      $('.Input').show();
      $('.dropZone').hide();
    } else if (value == '2') {
      $('.Input').hide();
      $('.dropZone').show();
    }
  });
</script>
